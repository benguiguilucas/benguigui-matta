<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="games.thenewpong.newpong">

    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />
    <application
        android:icon="@drawable/iconapp"
        android:label="The New Pong"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="com.game.kevin.onlinepong.activities.mainactivity"
            android:label="The New Pong"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.game.kevin.onlinepong.activities.highscoreactivity"
            android:label="HighScore">
        </activity>
        <activity
            android:name="com.game.kevin.onlinepong.activities.gameactivity"
            android:label="Let's Play">
        </activity>



    </application>

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

</manifest>